<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    tools:context=".view.fragments.InvestFragment">


    <ImageView
        android:id="@+id/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/mms"
        android:layout_width="30dp"
        android:layout_height="30dp"/>

    <TextView
        android:text="DAILY TACTIC"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@id/logo"
        app:layout_constraintBottom_toBottomOf="@id/logo"
        app:layout_constraintStart_toEndOf="@id/logo"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



    <TextView
        android:id="@+id/sheduT"
        android:text="Scheduled Project"
        android:textSize="17sp"
        app:layout_constraintTop_toBottomOf="@id/logo"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Spinner
        android:id="@+id/projectSpinner"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/sheduT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:id="@+id/head"
        android:weightSum="4"
        app:layout_constraintTop_toBottomOf="@id/projectSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="7dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView

                    android:gravity="center"
                    android:text="PHASE"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>



            </androidx.cardview.widget.CardView>




        </LinearLayout>
        <LinearLayout
            android:padding="7dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView

                    android:gravity="center"
                    android:text="OBJECTIVE"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>



            </androidx.cardview.widget.CardView>




        </LinearLayout>
        <LinearLayout
            android:padding="7dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView

                    android:gravity="center"
                    android:text="BUDGETED TIME"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>



            </androidx.cardview.widget.CardView>




        </LinearLayout>
        <LinearLayout
            android:padding="7dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView

                    android:gravity="center"
                    android:text="DUE DATE"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>



            </androidx.cardview.widget.CardView>




        </LinearLayout>







    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/envestRv"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/head"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>